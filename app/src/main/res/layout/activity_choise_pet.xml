<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChoisePetActivity">

    <TextView
            android:text="ペットショップ"
            android:layout_width="168dp"
            android:layout_height="0dp"
            android:id="@+id/choise_title_text" android:layout_marginTop="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="Button"
            android:layout_width="205dp"
            android:layout_height="0dp"
            android:id="@+id/choise_decide_button"
            android:layout_marginBottom="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="PETの名前"
            android:ems="10"
            android:id="@+id/choise_name_text"
            tools:layout_editor_absoluteX="43dp" tools:layout_editor_absoluteY="580dp"/>
    <ImageView
            android:layout_width="324dp"
            android:layout_height="684dp" app:srcCompat="@drawable/machie_white"
            tools:layout_editor_absoluteY="-2dp" tools:layout_editor_absoluteX="43dp" android:id="@+id/imageView"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/machine_button1"
            tools:layout_editor_absoluteY="244dp" tools:layout_editor_absoluteX="83dp" android:id="@+id/choise_1"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/machine_button1"
            tools:layout_editor_absoluteY="244dp" tools:layout_editor_absoluteX="114dp" android:id="@+id/choise_2"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/machine_button1"
            tools:layout_editor_absoluteY="244dp" tools:layout_editor_absoluteX="190dp" android:id="@+id/choise_4"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/machine_button1"
            tools:layout_editor_absoluteY="244dp" tools:layout_editor_absoluteX="152dp" android:id="@+id/choise_3"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/machine_button1"
            tools:layout_editor_absoluteY="244dp" tools:layout_editor_absoluteX="228dp" android:id="@+id/choise_5"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/machine_button1"
            tools:layout_editor_absoluteY="244dp" tools:layout_editor_absoluteX="270dp" android:id="@+id/choise_6"/>
</android.support.constraint.ConstraintLayout>