<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/ic_launcher_background"

>


    <Button
            android:text="遊ぶ"
            android:layout_width="233dp"
            android:layout_height="86dp"
            android:id="@+id/asobi_button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="12dp" android:layout_marginLeft="44dp" android:layout_marginStart="44dp"/>
    <Button
            android:text="水をやる"
            android:layout_width="209dp"
            android:layout_height="82dp"
            android:id="@+id/water_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp" android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"/>


    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="174dp"
            android:background="@drawable/background_orenge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" android:id="@+id/ヘッダー">

        <ImageView

                android:layout_width="232dp"
                android:layout_height="46dp" app:srcCompat="@drawable/love_bar"
                android:id="@+id/love_bar"
                android:layout_marginTop="112dp" app:layout_constraintTop_toTopOf="parent" android:scaleType="fitXY"
                android:layout_marginStart="350dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="350dp"
        />
        <TextView
                android:text="PETの名前"
                android:layout_width="213dp"
                android:layout_height="69dp" android:id="@+id/petName" android:textSize="36sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="45dp" android:layout_marginStart="45dp" android:layout_marginTop="53dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:layout_width="232dp"
                android:layout_height="46dp" app:srcCompat="@drawable/hp_bar"
                android:id="@+id/hp_bar" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="52dp"
                android:scaleType="fitXY" android:layout_marginStart="350dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="350dp"
        />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="131dp"
            android:background="@drawable/background_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/constraintLayout">

    </android.support.constraint.ConstraintLayout>
    <ListView
            android:layout_width="404dp"
            android:layout_height="413dp"
            android:id="@+id/ListView" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.753"/>


</android.support.constraint.ConstraintLayout>